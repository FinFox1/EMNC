<?xml version="1.0"?>
<info xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="https://apps.nextcloud.com/schema/info.xsd">
    <id>elementmatrix</id>
    <name>ElementMatrix</name>
    <summary>Matrix integration for Nextcloud - Talk replacement</summary>
    <description>ElementMatrix provides chat, video and audio calls using Matrix protocol as a replacement for Nextcloud Talk</description>
    <version>1.0.0</version>
    <licence>agpl</licence>
    <author>ElementMatrix Team</author>
    <namespace>ElementMatrix</namespace>
    <category>social</category>
    <website>https://github.com/elementmatrix/elementmatrix</website>
    <bugs>https://github.com/elementmatrix/elementmatrix/issues</bugs>
    <repository>https://github.com/elementmatrix/elementmatrix</repository>
    <dependencies>
        <nextcloud min-version="25" max-version="31"/>
    </dependencies>
    <navigations>
        <navigation>
            <name>ElementMatrix</name>
            <route>elementmatrix.Page.index</route>
        </navigation>
    </navigations>
    <commands>
        <command>OCA\ElementMatrix\Command\SyncUsers</command>
        <command>OCA\ElementMatrix\Command\SyncRooms</command>
    </commands>
    <settings>
        <admin>OCA\ElementMatrix\Settings\AdminSettings</admin>
        <admin-section>OCA\ElementMatrix\Settings\AdminSection</admin-section>
    </settings>
</info>
